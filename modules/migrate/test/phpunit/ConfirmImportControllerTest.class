	    array(0, 1, 'reset', 'reset',
		  'complete:view=core.SiteAdmin,subView=migrate.ImportResults'));
	if ($ret) {
	    return $ret;
	}

	$this->assertEquals(array('userImportSuccess' => array('phpunit_foobar' => 1),
				  'userImportFailure' => array(),
