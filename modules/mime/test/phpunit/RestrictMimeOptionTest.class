	    return $ret;
	}
	$ret = $this->_module->setParameter('mimeList', 'video/mpeg | test/file');
	if ($ret) {
	    return $ret;
	}

	list ($ret, $item) = $this->_createRandomDataItem($this->_album->getId(), 'test/file');
	if ($ret) {
	    return $ret;
	}
	/*
