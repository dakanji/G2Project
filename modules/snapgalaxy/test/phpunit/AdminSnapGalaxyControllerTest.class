/**
 * AdminSnapGalaxy controller tests
 *
 * @package SnapGalaxy
 * @subpackage PHPUnit
 * @author Alan Harder <alan.harder@sun.com>
 * @version $Revision: 17580 $
 */
class AdminSnapGalaxyControllerTest extends GalleryControllerTestCase {

    function AdminSnapGalaxyControllerTest($methodName) {
	$this->GalleryControllerTestCase($methodName, 'snapgalaxy.AdminSnapGalaxy');
    }

    function setUp() {
	$ret = parent::setUp();
	if ($ret) {
	    return $ret;
	}

	$ret = $this->_markPluginParametersForCleanup('module', 'snapgalaxy');
	if ($ret) {
	    return $ret;
	}
    }

    function testAdminSnapGalaxyControllerReset() {
	GalleryUtilities::putRequestVariable('form[action][reset]', '1');

	$results = $this->handleRequest();
	$this->assertEquals(
	    array('redirect' => array('view' => 'core.SiteAdmin',
				      'subView' => 'snapgalaxy.AdminSnapGalaxy'),
		  'status' => array(),
		  'error' => array()),
	    $results);
    }

    function testAdminSnapGalaxyControllerSave() {
	GalleryUtilities::putRequestVariable('form[snapgalaxyPartnerId]', '1234_a-X');
	GalleryUtilities::putRequestVariable('form[action][save]', '1');

	$results = $this->handleRequest();
	$this->assertEquals(
	    array('redirect' => array('view' => 'core.SiteAdmin',
				     'subView' => 'snapgalaxy.AdminSnapGalaxy'),
		  'status' => array('saved' => 1),
		  'error' => array()),
	    $results);

	list ($ret, $params) = GalleryCoreApi::fetchAllPluginParameters('module', 'snapgalaxy');
	if ($ret) {
	    return $ret;
	}
	foreach ($params as $key => $value) {
	    if ($key[0] == '_') {
		unset($params[$key]);
	    }
	}
	ksort($params);

	$this->assertEquals(array('snapgalaxyPartnerId' => '1234_a-X'),
	    $params, 'Verify settings');
    }

    function testAdminSnapGalaxyControllerSaveMissingValues() {
	GalleryUtilities::putRequestVariable('form[action][save]', '1');

	$results = $this->handleRequest();
	$this->assertEquals(
	    array('delegate' => array('view' => 'core.SiteAdmin',
				      'subView' => 'snapgalaxy.AdminSnapGalaxy'),
		  'status' => array(),
		  'error' => array('form[error][snapgalaxyPartnerId][invalid]')),
	    $results);
    }

    function testAdminSnapGalaxyControllerSaveInvalidValues() {
    	GalleryUtilities::putRequestVariable('form[snapgalaxyPartnerId]', 'รง&%/1234');
	GalleryUtilities::putRequestVariable('form[action][save]', '1');

	$results = $this->handleRequest();
	$this->assertEquals(
	    array('delegate' => array('view' => 'core.SiteAdmin',
				      'subView' => 'snapgalaxy.AdminSnapGalaxy'),
		  'status' => array(),
		  'error' => array('form[error][snapgalaxyPartnerId][invalid]')),
	    $results);
    }
}
?>
