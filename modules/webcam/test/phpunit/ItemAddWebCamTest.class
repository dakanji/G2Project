	public function testCheckUrl() {
		GalleryUtilities::putRequestVariable('form[action][checkUrl]', 1);
		GalleryUtilities::putRequestVariable('form[imageUrl]', 'test');

		$results = $this->handleRequest($this->_album);
		$this->assertEquals(array(array(), array()), $results);

		$template = null;

		foreach (array(
			''            => array(
				'imageUrl' => array(
					'missing' => 1,
				),
			),
			'test'        => array(
				'imageUrl' => array(
					'invalid' => 1,
				),
			),
			'test://foo'  => array(
				'imageUrl' => array(
					'invalid' => 1,
				),
			),
			'http://blah' => array(),
			'file://hoho' => array(),
		) as $url => $error) {
			$form                        = array(
				'action'   => array(
					'checkUrl' => 1,
				),
				'formName' => 'ItemAddWebCam',
				'imageUrl' => $url,
			);
			list($ret, $tpl, $l10Domain) = $this->_plugin->loadTemplate($template, $form, $this->_album);

			if ($ret) {
				$this->assert(false, $url);

				return $ret;
			}

			$this->assertEquals('modules/webcam/templates/ItemAddWebCam.tpl', $tpl, $url);
			$this->assertEquals('modules_webcam', $l10Domain, $url);
			$this->assertEquals($error, isset($form['error']) ? $form['error'] : array(), $url);
		}
	}

	public function testCheckUrlAsNormalUser() {
		global $gallery;

		// Make sure the request isn't blocked because of the "fromweb" setting
		$ret = $this->_module->setParameter('fromweb', 'on');

		if ($ret) {
			return $ret;
		}

		$ret = $this->_becomeGuestUser();

		if ($ret) {
			return $ret;
		}
		$ret = GalleryCoreApi::addUserPermission(
			$this->_album->getId(),
			$gallery->getActiveUserId(),
			'core.addDataItem'
		);

		if ($ret) {
			return $ret;
		}

		GalleryUtilities::putRequestVariable('form[action][checkUrl]', 1);
		$template = null;

		foreach (array(
			'file://hoho' => array(
				'imageUrl' => array(
					'invalid' => 1,
				),
			),
			'http://blah' => array(),
		) as $url => $error) {
			$form                        = array(
				'action'   => array(
					'checkUrl' => 1,
				),
				'formName' => 'ItemAddWebCam',
				'imageUrl' => $url,
			);
			list($ret, $tpl, $l10Domain) = $this->_plugin->loadTemplate($template, $form, $this->_album);

			if ($ret) {
				$this->fail($url);

				return $ret;
			}

			$this->assertEquals($error, isset($form['error']) ? $form['error'] : array(), $url);
		}
	}

