	    'permissions.directory' => 'x1',
	    'permissions.file' => 'x2',
	    'exec.beNice' => 'x2.5',
	    'exec.expectedStatus' => 'x3',
	    'default.orderBy' => 'x4',
	    'default.orderDirection' => 'x5',
	    'default.theme' => 'x7',
	    'session.lifetime' => 'x9',
	    'misc.markup' => 'x11',
