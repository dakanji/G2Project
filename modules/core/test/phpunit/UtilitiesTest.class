    /* Right now we only trust RFC1918 addresses */
    function testIsTrustedProxy() {
	/*
	 * Hard to verify this completely because it takes too long to test 2^32 addresses.  Try the
	 * approach of testing 15^4 (50625) addresses at random instead.
	 */
	for ($i = 0; $i < 15; $i++) {
	    $aa[] = rand(0, 255);
	    $ba[] = rand(0, 255);
	    $ca[] = rand(0, 255);
	    $da[] = rand(0, 255);
	}

	/* Put in RFC1918 prefixes to raise the odds on testing them */
	$aa[] = 10;
	$aa[] = 172;
	$aa[] = 192; $ba[] = 168;

	foreach ($aa as $a) {
	    foreach ($ba as $b) {
		foreach ($ca as $c) {
		    foreach ($da as $d) {
			$addr = "$a.$b.$c.$d";
			$trusted = GalleryUtilities::isTrustedProxy($addr);
			$shouldBeTrusted = (($a == 10) ||
					    ($a == 172 && $b >= 16 && $b <= 31) ||
					    ($a == 192 && $b == 168));
			if ($shouldBeTrusted != $trusted) {
			    $this->assert(false, sprintf(
					      "$addr %s be trusted.  IMPORTANT! " .
					      "Save and report this *exact* error message!",
					      $shouldBeTrusted ? 'should' : 'should not'));
			}
		    }
		}
	    }
	}

	/* Sanity check some known RFC1918 addresses */
	$this->assert(GalleryUtilities::isTrustedProxy('10.1.2.3'), '10/8 failed');
	$this->assert(GalleryUtilities::isTrustedProxy('172.16.254.253'), '172.16/12 failed 1');
	$this->assert(GalleryUtilities::isTrustedProxy('172.31.254.253'), '172.16/12 failed 2');
	$this->assert(!GalleryUtilities::isTrustedProxy('172.32.254.253'), '172.16/12 failed 3');
	$this->assert(GalleryUtilities::isTrustedProxy('192.168.1.2'), '192.168/16 failed');
    }

