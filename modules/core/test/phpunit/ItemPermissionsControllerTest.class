	    if ($ret) {
		return $ret;
	    }
	    foreach ($permissions as $permission) {
		if (isset($permission['userId'])
			&& $permission['userId'] == $this->_user->getId()) {
		    $this->assert(false,
				  'invalid user permission found: ' . serialize($permission));
		}
	    }
	}
    }

