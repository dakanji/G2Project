 */
class ItemEditControllerTestOption extends ItemEditOption {
    function isAppropriate($item, $thumbnail) {
	return array(null, true);
    }

    function handleRequestAfterEdit($form, &$item, &$preferred) {
	return array(null,
		     array('an error'),
		     array('a warning'));
    }
}

