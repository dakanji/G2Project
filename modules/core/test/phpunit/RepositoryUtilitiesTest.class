			      array('testModule' => array('active' => 1, 'available' => 1)));

	$utilities = new GalleryRepositoryUtilities();
	list ($ret, $version) = $utilities->getPluginVersion('module', 'testModule');
	if ($ret) {
	    $this->failWithStatus($ret);
