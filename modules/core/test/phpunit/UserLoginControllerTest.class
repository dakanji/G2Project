	    array('delegate' => array('view' => 'core.UserAdmin', 'subView' => 'core.UserLogin'),
		  'status' => array(),
		  'error' => array('form[error][UserLoginControllerTestPlugin1][anError]',
				   'form[error][UserLoginControllerTestPlugin2][anError]')),
	    $results);
    }

