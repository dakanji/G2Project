/**
 * Tests for SiteAdmin view
 * @package GalleryCore
 * @subpackage PHPUnit
 * @author Alan Harder <alan.harder@sun.com>
 * @version $Revision: 17580 $
 */
class SiteAdminTest extends GalleryTestCase {
	public function __construct($methodName) {
		parent::__construct($methodName);
	}

	public function setUp($x1 = null) {
		$ret = parent::setUp();

		if ($ret) {
			return $ret;
		}

		list($ret, $this->_view) = GalleryView::doStatic()->loadView('core.SiteAdmin');

		if ($ret) {
			return $ret;
		}
	}

	public function testGuestRedirect() {
		// Verify redirect to login view if guest access SiteAdmin view
		$ret = $this->_becomeGuestUser();

		if ($ret) {
			return $ret;
		}
		$template           = $form = null;
		list($ret, $result) = $this->_view->loadTemplate($template, $form);

		if ($ret) {
			return $ret;
		}
		$this->assertEquals(
			array(
				'redirect' => array(
					'view'    => 'core.UserAdmin',
					'subView' => 'core.UserLogin',
					'return'  => true,
				),
			),
			$result
		);
	}
}
