class ItemAddTestOption extends ItemAddOption {
    function ItemAddTestOption() {
    }

    function handleRequestAfterAdd($form, $items) {
	$errors = array();
	$warnings = array();
	for ($i = 0; $i < count($items); $i++) {
	    $errors[] = 'an error';
	    $warnings[$i] = array();
	    $warnings[$i][] = 'a warning';
	}
	return array(null, $errors, $warnings);
    }

